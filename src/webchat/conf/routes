# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET / controllers.Application.index()

#Login
GET /login controllers.LoginHandling.login()
GET /logout controllers.LoginHandling.logout()
POST /login controllers.LoginHandling.submit()

#Profile
GET /profile controllers.ProfileHandling.edit()
POST /profile controllers.ProfileHandling.submit()


#TestData

GET /Testdata controllers.Application.filltestdata()

# WebSocket
GET /WebSocket controllers.WebSocketHandling.index()

GET /websocket controllers.Application.chat()

# Json
GET /Json/Auth controllers.JsonHandling.genAuth()
GET /Json/Message controllers.JsonHandling.genMessage()
GET /Json/Groups controllers.JsonHandling.genGroup()

# Map static resources from the /public folder to the /assets URL path
GET /assets/*file controllers.Assets.at(path="/public", file)
